<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/C1.WPF.Schedule.4.5.2;component/themes/CalendarThemes/Office2016/Colorful.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Color x:Key="BorderColor">#FFABABAB</Color>
    <Color x:Key="ForegroundTextBoxColor">#FF444444</Color>

    <SolidColorBrush x:Key="C1Calendar_Border_Brush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="C1Calendar_Foreground_Brush" Color="{StaticResource ForegroundTextBoxColor}" />
    <SolidColorBrush x:Key="C1Calendar_MonthHeaderText_Brush" Color="{StaticResource ForegroundTextBoxColor}" />
    <SolidColorBrush x:Key="C1Calendar_NavArrow_Brush" Color="{StaticResource ForegroundTextBoxColor}" />
    <SolidColorBrush x:Key="C1Calendar_Weekend_Brush" Color="{StaticResource ForegroundTextBoxColor}" />

</ResourceDictionary>