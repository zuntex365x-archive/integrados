	<!-- Brush @ C1CoverFlow Background -->
	<LinearGradientBrush x:Key="CoverFlowBackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
		<GradientStop Offset="0" Color="#FFD1DCE8" />
		<GradientStop Offset="0.6" Color="#FFE9EEF4" />
		<GradientStop Offset="0.6" Color="#FFD1DCE8" />
		<GradientStop Offset="1" Color="#FFE9EEF4" />
	</LinearGradientBrush>

	<c1Ext:ReflectionBackgroundConverter x:Key="reflectionBackgroundConverter" />
	
	<!-- Brush @ C1CoverFlow ScrollbarBackground -->
	<SolidColorBrush x:Key="CoverFlowScrollBarBrush" Color="#CCD1DCE8" />
    <SolidColorBrush x:Key="WpfInputCoverFlowScrollBarBrush" Color="#CCDDDDDD" />
	
	<!-- CornerRadius @ ScrollBar -->
	<CornerRadius x:Key="CoverFlowScrollBarCornerRadius">12</CornerRadius>
	<!-- CornerRadius @ ScrollBar InnerBorder -->
	<CornerRadius x:Key="CoverFlowScrollBarInnerCornerRadius">11</CornerRadius>

	<!-- BrushBuilder @ Vertical ScrollBar Background -->
	<Style x:Key="CoverFlowScrollVerticalBrush" TargetType="c1:C1BrushBuilder">
		<Setter Property="DesignBrush">
			<Setter.Value>
				<LinearGradientBrush EndPoint="0,0.5" StartPoint="1,0.5">
					<GradientStop Color="#FFF3F6F7" Offset="0" />
					<GradientStop Color="#FFE0E5E8" Offset="1" />
				</LinearGradientBrush>
			</Setter.Value>
		</Setter>
		<Setter Property="DesignColor" Value="{StaticResource BaseColor}" />
	</Style>
	<!-- BrushBuilder @ Horizontal ScrollBar Background -->
	<Style x:Key="CoverFlowScrollHorizontalBrush" TargetType="c1:C1BrushBuilder">
		<Setter Property="DesignBrush">
			<Setter.Value>
				<LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                    <GradientStop Color="#FFF2F5F7" Offset="0" />
                    <GradientStop Color="#FFE1E4E8" Offset="1" />
				</LinearGradientBrush>
			</Setter.Value>
		</Setter>
		<Setter Property="DesignColor" Value="{StaticResource BaseColor}" />
	</Style>

