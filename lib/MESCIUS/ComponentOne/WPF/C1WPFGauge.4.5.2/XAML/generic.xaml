<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:system="clr-namespace:System;assembly=mscorlib" xmlns:c1="clr-namespace:C1.WPF;assembly=C1.WPF.4.5.2" xmlns:c1Gauge="clr-namespace:C1.WPF.Gauge" xmlns:c1_gaugePrimitives="clr-namespace:C1.WPF.Gauge.Primitives" xmlns:c1_gauge_silverlightonly="clr-namespace:C1.Silverlight.Gauge" xmlns:c1_c1_gaugePrimitives_silverlightonly="clr-namespace:C1.Silverlight.Gauge.Primitives" xmlns:ms_wpfonly="http://schemas.microsoft.com/netfx/2007/xaml/presentation" xmlns:ms_silverlightonly="http://schemas.microsoft.com/client/2007" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d ms_wpfonly ms_silverlightonly c1_gauge_silverlightonly c1_c1_gaugePrimitives_silverlightonly">

    <c1:C1ProjectThicknessConverter x:Key="projectThicknessConverter" />

    <!--******************** Common Brushes ********************-->

    <!-- Color & Brush used to build Base brushes -->
    <Color x:Key="BaseColor">#FFD1DCE8</Color>
    <SolidColorBrush x:Key="BaseColorBrush" Color="{StaticResource BaseColor}" />

    <!-- Color & Brush @ general borders -->
    <Color x:Key="BorderColor">#FFA4AFBA</Color>
    <!-- Brush @ general borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />

    <!-- Color & Brush @ general foreground -->
    <Color x:Key="ForegroundColor">Black</Color>
    <SolidColorBrush x:Key="ForegroundBrushColor" Color="{StaticResource ForegroundColor}" />

    <!-- Brush @ Disabled state-->
    <SolidColorBrush x:Key="DisabledBrush" Color="#A5FFFFFF" />

    <!-- WPF Input Brushes -->
    <SolidColorBrush x:Key="WpfInputBaseBrush" Color="#FFDCDCDC" />
    <SolidColorBrush x:Key="WpfInputBorderBrush" Color="#FFAEAEAE" />


    <!--******************** C1Gauges general Brushes & Styles ********************-->

    <!-- Color & Brush @ Pointers -->
    <Color x:Key="GaugePointerColor">#FFBF551C</Color>
    <SolidColorBrush x:Key="GaugePointerBrush" Color="{StaticResource GaugePointerColor}" />
    <SolidColorBrush x:Key="GaugePointerBorderBrush" Color="{StaticResource GaugePointerColor}" />

    <!-- Color & Brush @ PointerCaps -->
    <Color x:Key="GaugePointerCapColor">#FF788D9F</Color>
    <SolidColorBrush x:Key="GaugePointerCapBrush" Color="{StaticResource GaugePointerCapColor}" />
    <SolidColorBrush x:Key="GaugePointerCapBorderBrush" Color="{StaticResource GaugePointerCapColor}" />
    <SolidColorBrush x:Key="WpfInputGaugePointerCapBrush" Color="#FF898989" />
    <SolidColorBrush x:Key="WpfInputGaugePointerCapBorderBrush" Color="#FF898989" />

    <!-- Brush @ PointerCap Border BaseColor based -->
    <SolidColorBrush x:Key="PointerCapBorderBrush" Color="{StaticResource BaseColor}" />
    <SolidColorBrush x:Key="WpfInputPointerCapBorderBrush" Color="#FFDCDCDC" />

    <!-- Brush @ Marks -->
    
    
    <SolidColorBrush x:Key="GaugeMarkBrush" Color="#FF696969" />

    <!-- Brush @ Covers -->
    <SolidColorBrush x:Key="GaugeCoverBrush" Color="#FFF9F9F9" />

    <!-- Style @ C1Gauges Big Mark  -->
    <Style x:Key="DefaultBigMarkStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource GaugeMarkBrush}" />
        <Setter Property="Height" Value="10" />
        <Setter Property="Width" Value="1.5" />
    </Style>
    <!-- Style @ C1Gauges Medium Size Mark Style -->
    <Style x:Key="DefaultMiddleMarkStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource GaugeMarkBrush}" />
        <Setter Property="Height" Value="6" />
        <Setter Property="Width" Value="1" />
    </Style>
    <!-- Style @ C1Gauges Small Mark Style -->
    <Style x:Key="DefaultSmallMarkStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="2" />
        <Setter Property="Background" Value="{StaticResource GaugeMarkBrush}" />
        <Setter Property="Height" Value="2" />
        <Setter Property="Width" Value="2" />
    </Style>

    <!-- Style @ C1Gauges Label -->
    <Style x:Key="LabelStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrushColor}" />
        <Setter Property="FontFamily" Value="Arial" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- C1Ellipse -->
    <Style TargetType="c1_gaugePrimitives:C1Ellipse">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c1_gaugePrimitives:C1Ellipse">
                    <Grid>
                        <Ellipse x:Name="Ellipse" Stretch="Fill" Fill="{TemplateBinding Background}" />
                        <Ellipse x:Name="EllipseFillGradient" Stretch="Fill" Style="{TemplateBinding FillGradientStyle}" />
                        <Ellipse x:Name="EllipseStrokeGradient" Stretch="Fill" Style="{TemplateBinding StrokeGradientStyle}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!--******************** C1LinearGauge Brushes & Styles ********************-->

    <!-- Brush @ C1LinearGauge Background -->
    <LinearGradientBrush x:Key="LinearGaugeBackgroundBrush" EndPoint="0,1" StartPoint="1,0">
        <GradientStop Color="{StaticResource BaseColor}" Offset="0.35" />
        <GradientStop Color="#FFE1E9F0" Offset="0.5" />
        <GradientStop Color="{StaticResource BaseColor}" Offset="0.65" />
    </LinearGradientBrush>
    <!-- Brush @ C1LinearGauge Border -->
    <LinearGradientBrush x:Key="LinearGaugeBorderBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFA3AEB9" Offset="0" />
        <GradientStop Color="#FF8399A9" Offset="0.375" />
        <GradientStop Color="#FF718597" Offset="0.375" />
        <GradientStop Color="#FF617584" Offset="1" />
    </LinearGradientBrush>

    <!-- Thickness @ C1LinearGauge -->
    <Thickness x:Key="LinearGaugeBorderThickness">4</Thickness>


    <!-- Pointer @ C1LinearGauge -->
    <Style TargetType="c1Gauge:C1LinearGaugePointer">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="c1Gauge:C1LinearGaugePointer">
                        <Grid x:Name="Root">
                            <Path Stretch="Fill" Data="M0.5,4.2 C0.45,3.7 4.8,0.5 6.8,0.5 C8.7,0.49 13.3,3.7 13.5,4.2 C13.68,4.65 13.5,17.7 13.5,24.5 L0.5,24.5 C0.5,17.7 0.55,4.6667743 0.5,4.2 z" Stroke="{TemplateBinding BorderBrush}" Fill="{TemplateBinding Background}" StrokeThickness="{TemplateBinding Thickness}">
                            </Path>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <!-- C1LinearGauge -->
    <Style TargetType="c1Gauge:C1LinearGauge">
        
        
        <Setter Property="Background" Value="{StaticResource WpfInputBaseBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource WpfInputBorderBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource LinearGaugeBorderThickness}" />
        <Setter Property="PointerFill" Value="{StaticResource GaugePointerBrush}" />
        <Setter Property="PointerStroke" Value="{StaticResource GaugePointerBorderBrush}" />
        <Setter Property="PointerStrokeThickness" Value="1" />
        <Setter Property="PointerLength" Value="0.55" />
        <Setter Property="PointerWidth" Value="0.03" />
        <Setter Property="PointerOffset" Value="0.45" />
        <Setter Property="DefaultTextStyle" Value="{StaticResource LabelStyle}" />
        <Setter Property="DefaultBigMarkTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <Border Style="{StaticResource DefaultBigMarkStyle}" />
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="DefaultMiddleMarkTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <Border Style="{StaticResource DefaultMiddleMarkStyle}" />
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="DefaultSmallMarkTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <Border Style="{StaticResource DefaultSmallMarkStyle}" />
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c1Gauge:C1LinearGauge">
                    <Grid x:Name="Root">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard />
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="DisabledVisualElement" Storyboard.TargetProperty="Opacity">
                                            <SplineDoubleKeyFrame KeyTime="0" Value="1" />
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <c1:C1BrushBuilder x:Name="backBrush" Input="{TemplateBinding Background}" DesignColor="{StaticResource BaseColor}" DesignBrush="{StaticResource LinearGaugeBackgroundBrush}" />
                        <!-- ClearStyle :: Brush Builders -->
                        <c1:C1BrushBuilder x:Name="borderBrush" Input="{TemplateBinding BorderBrush}" DesignColor="{StaticResource BorderColor}" DesignBrush="{StaticResource LinearGaugeBorderBrush}" />
                        <!-- Background and border -->
                        <Border Background="{Binding ElementName=backBrush,Path=Output}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{Binding ElementName=borderBrush,Path=Output}" CornerRadius="4" />
                        <!-- Face and decorators -->
                        <Border x:Name="FaceBorder" Visibility="{TemplateBinding FaceVisibility}" />
                        <Canvas x:Name="DecoratorsLayer" Visibility="{TemplateBinding DecoratorsVisibility}" />
                        <!-- Pointer and PointerCap -->
                        <Grid Visibility="{TemplateBinding PointerVisibility}">
                            <c1Gauge:C1LinearGaugePointer x:Name="Pointer" PointerLength="{TemplateBinding PointerLength}" PointerWidth="{TemplateBinding PointerWidth}" Offset="{TemplateBinding PointerOffset}" BorderBrush="{TemplateBinding PointerStroke}" Thickness="{TemplateBinding PointerStrokeThickness}" Background="{TemplateBinding PointerFill}" Style="{TemplateBinding PointerStyle}" />
                        </Grid>
                        <!-- Cover -->
                        <Border x:Name="CoverBorder" Visibility="{TemplateBinding CoverVisibility}" />

                        <Border x:Name="DisabledVisualElement" CornerRadius="4" Background="{StaticResource DisabledBrush}" Opacity="0" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--******************** C1RulerGauge Brushes & Styles ********************-->

    <!-- Brush @ C1RulerGauge Background -->
    <SolidColorBrush x:Key="RulerGaugeBackgroundBrush" Color="{StaticResource BaseColor}" />

    <!-- Thickness @ C1RulerGauge-->
    <Thickness x:Key="RulerGaugeBorderThickness">4</Thickness>

    <!--Pointer @ C1RulerGauge -->
    <Style x:Key="RulerPointerStyle" TargetType="c1Gauge:C1LinearGaugePointer">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c1Gauge:C1LinearGaugePointer">
                    <Grid x:Name="Root">
                        <Path Fill="{TemplateBinding Background}" Stretch="Fill" Stroke="{TemplateBinding BorderBrush}" StrokeThickness="{TemplateBinding Thickness}" Data="M17.235754,41.917244 L25.825527,31.652058 C26.717018,30.601372 25.583334,28.5 24.125,28.5 L4.25,28.5 C3,28.5 2.0566342,30.334604 2.8349512,31.251905 L11.85507,41.882759 C13.673617,43.734173 15.627059,43.450317 17.235754,41.917244 z" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- C1RulerGauge -->
    <Style TargetType="c1Gauge:C1RulerGauge">
        
        
        <Setter Property="Background" Value="{StaticResource WpfInputBaseBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource WpfInputBorderBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource RulerGaugeBorderThickness}" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrushColor}" />
        <Setter Property="PointerFill" Value="{StaticResource GaugePointerBrush}" />
        <Setter Property="PointerStroke" Value="{StaticResource GaugePointerBorderBrush}" />
        <Setter Property="PointerStrokeThickness" Value="1" />
        <Setter Property="PointerLength" Value="0.25" />
        <Setter Property="PointerWidth" Value="0.07" />
        <Setter Property="PointerOffset" Value="0.2" />
        <Setter Property="DefaultTextStyle" Value="{StaticResource LabelStyle}" />
        <Setter Property="DefaultBigMarkTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border Height="10" Width="1" Background="{StaticResource GaugeMarkBrush}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="DefaultMiddleMarkTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border Height="6" Width="1" Background="{StaticResource GaugeMarkBrush}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="DefaultSmallMarkTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border Height="2" Width="2" CornerRadius="2" Background="{StaticResource GaugeMarkBrush}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="FaceTemplate">
            <Setter.Value>
                <DataTemplate>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="CoverTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.1*" />
                            <RowDefinition />
                            <RowDefinition Height="0.3*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.1*" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="0.3*" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Row="1" Grid.Column="1" Opacity="0.25" CornerRadius="30">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#99FFFFFF" Offset="0.5" />
                                    <GradientStop Color="#19FFFFFF" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c1Gauge:C1RulerGauge">
                    <Grid x:Name="Root">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard />
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="DisabledVisualElement" Storyboard.TargetProperty="Opacity">
                                            <SplineDoubleKeyFrame KeyTime="0" Value="1" />
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <!-- ClearStyle :: Brush Builders -->
                        <c1:C1BrushBuilder x:Name="borderBrush" Input="{TemplateBinding BorderBrush}" DesignColor="{StaticResource BorderColor}" DesignBrush="{StaticResource LinearGaugeBorderBrush}" />
                        <!-- Background and border -->
                        <Border CornerRadius="30" Background="{TemplateBinding Background}" BorderBrush="{Binding ElementName=borderBrush,Path=Output}" BorderThickness="{TemplateBinding BorderThickness}" />
                        <!-- Face and decorators -->
                        <Border x:Name="FaceBorder" Visibility="{TemplateBinding FaceVisibility}" />
                        <Canvas x:Name="DecoratorsLayer" Visibility="{TemplateBinding DecoratorsVisibility}" />
                        <!-- Pointer and PointerCap -->
                        <Grid Visibility="{TemplateBinding PointerVisibility}">
                            <c1Gauge:C1LinearGaugePointer x:Name="Pointer" Style="{StaticResource RulerPointerStyle}" Background="{TemplateBinding PointerFill}" BorderBrush="{TemplateBinding PointerStroke}" Offset="{TemplateBinding PointerOffset}" PointerLength="{TemplateBinding PointerLength}" PointerWidth="{TemplateBinding PointerWidth}" Thickness="{TemplateBinding PointerStrokeThickness}" />
                        </Grid>
                        <!-- Cover -->
                        <Border x:Name="CoverBorder" Visibility="{TemplateBinding CoverVisibility}" />
                        <Border x:Name="DisabledVisualElement" CornerRadius="30" Background="{StaticResource DisabledBrush}" Opacity="0" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--******************** C1RadialGauge Brushes & Styles ********************-->

    <!-- Brush @ C1RadialGauge Background -->
    <RadialGradientBrush x:Key="RadialGaugeBackgroundBrush">
        <GradientStop Color="#FFE1E9F0" Offset="0.8" />
        <GradientStop Color="{StaticResource BaseColor}" Offset="1" />
    </RadialGradientBrush>
    <!-- Brush @ C1RadialGauge Border -->
    <LinearGradientBrush x:Key="RadialGaugeBorderBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFA3AEB9" Offset="0" />
        <GradientStop Color="#FF8399A9" Offset="0.375" />
        <GradientStop Color="#FF718597" Offset="0.375" />
        <GradientStop Color="#FF617584" Offset="1" />
    </LinearGradientBrush>

    <!-- Thickness @ C1RadialGauge -->
    <Thickness x:Key="RadialGaugeBorderThickness">4</Thickness>

    <!-- Style @ C1RadialGauge Cover -->
    <Style x:Key="RadialGaugeCoverStyle" TargetType="Path">
        <Setter Property="Fill">
            <Setter.Value>
                <RadialGradientBrush>
                    <RadialGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleY="2.184" ScaleX="1.554" />
                            <SkewTransform CenterX="0.5" CenterY="0.5" />
                            <RotateTransform CenterX="0.5" CenterY="0.5" />
                            <TranslateTransform X="-0.115" Y="-0.424" />
                        </TransformGroup>
                    </RadialGradientBrush.RelativeTransform>
                    <GradientStop Color="#FFFFFFFF" Offset="0.5" />
                    <GradientStop Color="#00FFFFFF" Offset="0.9" />
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Opacity" Value="0.2" />
    </Style>

    <!-- Brush @ C1RadialGauge PointerCap Background  -->
    <RadialGradientBrush x:Key="RadialGaugePointerCapBrush">
        <GradientStop Color="#FFC5D2D9" Offset="0.5" />
        <GradientStop Color="#FFA0B7C3" Offset="1" />
    </RadialGradientBrush>

    <!-- Pointer @ C1RadialGauge  -->
    <Style TargetType="c1Gauge:C1RadialGaugePointer">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="c1Gauge:C1RadialGaugePointer">
                        <Path x:Name="Root" Stretch="Fill" Data="M55.691177,9.665947 C56.331844,9.70292 57.350327,9.7046404 58.250206,9.6643362 C58.558758,9.6505165 58.659889,9.6295786 58.679169,9.6034966 C59.003292,9.1650133 57.381084,5.8584418 57,5.8600001 C56.631908,5.8609223 55.043633,9.1721344 55.244141,9.6046124 C55.256142,9.6304922 55.442734,9.6516094 55.691177,9.665947 z" Stroke="{TemplateBinding BorderBrush}" Fill="{TemplateBinding Background}" StrokeThickness="{TemplateBinding Thickness}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <!-- PointerCap @ C1RadialGauge -->
    <Style TargetType="c1Gauge:C1RadialGaugePointerCap">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="c1Gauge:C1RadialGaugePointerCap">
                        <Grid>
                            <c1:C1BrushBuilder x:Name="backBrush" Input="{TemplateBinding Background}" DesignColor="{StaticResource BaseColor}" DesignBrush="{StaticResource RadialGaugePointerCapBrush}" />
                            <Ellipse x:Name="Root" Stretch="Fill" Stroke="{TemplateBinding BorderBrush}" Fill="{Binding ElementName=backBrush,Path=Output}" StrokeThickness="{TemplateBinding StrokeThickness}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <!-- C1RadialGauge -->
    <Style TargetType="c1Gauge:C1RadialGauge">
        
        
        <Setter Property="Background" Value="{StaticResource WpfInputBaseBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource WpfInputBorderBrush}" />
        <Setter Property="PointerCapFill" Value="{StaticResource WpfInputBaseBrush}" />
        <Setter Property="PointerCapStroke" Value="{StaticResource WpfInputPointerCapBorderBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource RadialGaugeBorderThickness}" />
        <Setter Property="PointerFill" Value="{StaticResource GaugePointerBrush}" />
        <Setter Property="PointerStroke" Value="{StaticResource GaugePointerBorderBrush}" />
        <Setter Property="PointerStrokeThickness" Value="1" />
        <Setter Property="PointerWidth" Value="0.03" />
        <Setter Property="PointerCapStrokeThickness" Value="1" />
        <Setter Property="PointerCapSize" Value="0.12, 0.12" />
        <Setter Property="PointerOrigin" Value="0.5, 0.5" />
        <Setter Property="DefaultTextStyle" Value="{StaticResource LabelStyle}" />
        <Setter Property="DefaultBigMarkTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border Style="{StaticResource DefaultBigMarkStyle}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="DefaultMiddleMarkTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border Style="{StaticResource DefaultMiddleMarkStyle}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="DefaultSmallMarkTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <Border Style="{StaticResource DefaultSmallMarkStyle}" />
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="CoverVisibility" Value="Collapsed" />
        <Setter Property="CoverTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.025*" />
                                <RowDefinition Height="0.373*" />
                                <RowDefinition Height="0.577*" />
                                <RowDefinition Height="0.025*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.025*" />
                                <ColumnDefinition Width="0.1*" />
                                <ColumnDefinition Width="0.85*" />
                                <ColumnDefinition Width="0.025*" />
                            </Grid.ColumnDefinitions>
                            <Path Data="M25.31477,164.26979 C35.155067,174.81541 57.906914,196.6852 99.403839,195.21431 C139.42908,193.79558 164.8508,166.76308 174.67563,151.38622 C184.76678,135.59253 188.79874,118.63158 189.34514,108.79025 C186.26112,105.33167 154.0701,83.825142 111.23993,86.378532 C30.655104,91.182724 25.31477,164.26979 25.31477,164.26979 z" Style="{StaticResource RadialGaugeCoverStyle}" Stretch="Fill" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2" />
                        </Grid>
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c1Gauge:C1RadialGauge">
                    <Grid x:Name="Root">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard />
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="DisabledVisualElement" Storyboard.TargetProperty="Opacity">
                                            <SplineDoubleKeyFrame KeyTime="0" Value="1" />
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <!-- ClearStyle :: Brush Builders -->
                        <c1:C1BrushBuilder x:Name="backBrush" Input="{TemplateBinding Background}" DesignColor="{StaticResource BaseColor}" DesignBrush="{StaticResource RadialGaugeBackgroundBrush}" />
                        <c1:C1BrushBuilder x:Name="borderBrush" Input="{TemplateBinding BorderBrush}" DesignColor="{StaticResource BorderColor}" DesignBrush="{StaticResource RadialGaugeBorderBrush}" />
                        <!-- Background and border -->
                        <c1_gaugePrimitives:C1Ellipse StrokeThickness="{TemplateBinding BorderThickness}" Stroke="{Binding ElementName=borderBrush,Path=Output}" Fill="{Binding ElementName=backBrush,Path=Output}" />
                        <!-- Face and decorators -->
                        <Border x:Name="FaceBorder" Visibility="{TemplateBinding FaceVisibility}" />
                        <Canvas x:Name="DecoratorsLayer" Visibility="{TemplateBinding DecoratorsVisibility}" />
                        <!-- Pointer and PointerCap -->
                        <Grid Visibility="{TemplateBinding PointerVisibility}">
                            <c1Gauge:C1RadialGaugePointer x:Name="Pointer" PointerLength="{TemplateBinding PointerLength}" PointerWidth="{TemplateBinding PointerWidth}" Location="{TemplateBinding PointerOrigin}" Offset="{TemplateBinding PointerOffset}" BorderBrush="{TemplateBinding PointerStroke}" Thickness="{TemplateBinding PointerStrokeThickness}" Background="{TemplateBinding PointerFill}" Style="{TemplateBinding PointerStyle}" />
                            <c1Gauge:C1RadialGaugePointerCap x:Name="PointerCap" CapSize="{TemplateBinding PointerCapSize}" Location="{TemplateBinding PointerOrigin}" BorderBrush="{TemplateBinding PointerCapStroke}" StrokeThickness="{TemplateBinding PointerCapStrokeThickness}" Background="{TemplateBinding PointerCapFill}" Style="{TemplateBinding PointerCapStyle}" />
                        </Grid>
                        <!-- Cover -->
                        <Border x:Name="CoverBorder" Visibility="{TemplateBinding CoverVisibility}" />
                        <Ellipse x:Name="DisabledVisualElement" IsHitTestVisible="False" Fill="{StaticResource DisabledBrush}" Opacity="0" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--******************** C1Speedometer Brushes & Styles ********************-->

