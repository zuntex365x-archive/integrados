                                                </Canvas>
                                            </Viewbox>
                                        </Grid>
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <c1:C1Separator Style="{StaticResource ToolBarSeparator}"/>
                                <!--move task-->
                                <c1:C1ToolbarButton VerticalContentAlignment="Center" CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding MoveTaskUpCommand}" ToolTipService.ToolTip="{Binding ToolTip_TaskUp,Source={StaticResource Resources}}">
                                    <c1:C1ToolbarButton.Content>
                                        <Grid Style="{StaticResource MenuIcon}">
                                            <Viewbox Stretch="Uniform">
                                                <Canvas Width="16" Height="16">
                                                    <Polygon Points="7.5,2 13,8 2,8 " FillRule="NonZero" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Rectangle Canvas.Left="5" Canvas.Top="5" Width="5" Height="9" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                </Canvas>
                                            </Viewbox>
                                        </Grid>
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <c1:C1ToolbarButton VerticalContentAlignment="Center" CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding MoveTaskDownCommand}" ToolTipService.ToolTip="{Binding ToolTip_TaskDown,Source={StaticResource Resources}}">
                                    <c1:C1ToolbarButton.Content>
                                        <Grid Style="{StaticResource MenuIcon}">
                                            <Viewbox Stretch="Uniform">
                                                <Canvas Width="16" Height="16">
                                                    <Polygon Points="7.5,14 2,8 13,8 " FillRule="NonZero" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Rectangle Canvas.Left="5" Canvas.Top="2" Width="5" Height="9" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                </Canvas>
                                            </Viewbox>
                                        </Grid>
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <c1:C1Separator Style="{StaticResource ToolBarSeparator}"/>
                                <!--task info-->
                                <c1:C1ToolbarButton VerticalContentAlignment="Center" CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding ShowTaskInfoDialogCommand}" ToolTipService.ToolTip="{Binding ToolTip_TaskInfo,Source={StaticResource Resources}}">
                                    <c1:C1ToolbarButton.Content>
                                        <Grid Style="{StaticResource MenuIcon}">
                                            <Viewbox Stretch="Uniform">
                                                <Canvas Width="16" Height="16">
                                                    <Path Data="M 1 1 V 3 H 16 V 1 H 1 z" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Path Data="M 1 3 V 14 H 16 V 3 H 1 z M 15 13 H 2 V 4 h 13 v 9 z" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Rectangle Canvas.Left="11" Canvas.Top="5" Width="3" Height="1" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Rectangle Canvas.Left="9" Canvas.Top="5" Width="1" Height="7" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Rectangle Canvas.Left="11" Canvas.Top="7" Width="3" Height="1" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Rectangle Canvas.Left="11" Canvas.Top="9" Width="3" Height="1" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Rectangle Canvas.Left="11" Canvas.Top="11" Width="3" Height="1" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Rectangle Canvas.Left="3" Canvas.Top="6" Width="5" Height="3" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                </Canvas>
                                            </Viewbox>
                                        </Grid>
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <c1:C1Separator Style="{StaticResource ToolBarSeparator}"/>
                                <!--fieldstyles-->
                                <c1:C1ToolbarButton VerticalContentAlignment="Center" CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding ShowFieldStylesDialogCommand}" ToolTipService.ToolTip="{Binding ToolTip_FieldStyles,Source={StaticResource Resources}}">
                                    <c1:C1ToolbarButton.Content>
                                        <TextBlock Text="&#xE1C8;" Style="{StaticResource SymbolText}"/>
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <c1:C1Separator Style="{StaticResource ToolBarSeparator}"/>
                                <!--task manipulate-->
                                <c1:C1ToolbarButton VerticalContentAlignment="Center" CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding AddTaskCommand}" ToolTipService.ToolTip="{Binding ToolTip_AddTask,Source={StaticResource Resources}}">
                                    <c1:C1ToolbarButton.Content>
                                        <Grid Style="{StaticResource MenuIcon}">
                                            <Viewbox Stretch="Uniform">
                                                <Canvas Width="20" Height="16">
                                                    <Canvas.RenderTransform>
                                                        <TranslateTransform X="0" Y="2"/>
                                                    </Canvas.RenderTransform>
                                                    <Polygon Points="4,0 3,0 3,2.294 1.378,0.672 0.671,1.379 2.292,3 0,3 0,4 2.292,4 0.672,5.621 1.379,6.328 3,4.707 3,7 4,7 4,4.708 5.621,6.329 6.328,5.622 4.706,4 7,4 7,3 4.706,3 6.328,1.378 5.621,0.671 4,2.292 " Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Path Data="M 14 5 H 7.725 C 7.599 5.354 7.445 5.693 7.24 6 H 13 c 1.104 0 2 0.896 2 2 0 1.104 -0.896 2 -2 2 H 7 C 5.896 10 5 9.104 5 8 5 7.902 5.015 7.809 5.029 7.716 4.702 7.834 4.357 7.91 4 7.95 V 9 c 0 1.104 0.896 2 2 2 h 8 c 1.104 0 2 -0.896 2 -2 V 7 C 16 5.896 15.104 5 14 5 z" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                </Canvas>
                                            </Viewbox>
                                        </Grid>
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <c1:C1ToolbarButton VerticalContentAlignment="Center" CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding AddSummaryTask}" ToolTipService.ToolTip="{Binding ToolTip_AddSummaryTask,Source={StaticResource Resources}}">
                                    <c1:C1ToolbarButton.Content>
                                        <Grid Style="{StaticResource MenuIcon}">
                                            <Viewbox Stretch="Uniform">
                                                <Canvas Width="20" Height="16">
                                                    <Canvas.RenderTransform>
                                                        <TranslateTransform X="0" Y="2"/>
                                                    </Canvas.RenderTransform>
                                                    <Polygon Points="4,0 3,0 3,2.294 1.378,0.672 0.671,1.379 2.292,3 0,3 0,4 2.292,4 0.672,5.621 1.379,6.328 3,4.707 3,7 4,7 4,4.708 5.621,6.329 6.328,5.622 4.706,4 7,4 7,3 4.706,3 6.328,1.378 5.621,0.671 4,2.292 " Fill="{TemplateBinding ViewHeaderForeground}"/>
