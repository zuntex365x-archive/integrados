                                                    <Polygon Points="6,3 11,3 8.5,0 " FillRule="NonZero" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Path Data="M 15 16 V 13 12 9 H 2 v 3 1 3 H 15 z M 8 15 H 6 v -2 h 2 v 2 z m 4 -5 h 2 v 2 h -2 v -2 z m 0 3 h 2 v 2 H 12 V 13 z M 9 10 h 2 v 2 H 9 v -2 z m 0 3 h 2 v 2 H 9 V 13 z M 8 10 v 2 H 6 v -2 h 2 z m -5 0 h 2 v 2 H 3 v -2 z m 0 3 h 2 v 2 H 3 v -2 z" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                </Canvas>
                                            </Viewbox>
                                        </Grid>
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <c1:C1ToolbarButton VerticalContentAlignment="Center" CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding DeleteTaskCommand}" ToolTipService.ToolTip="{Binding ToolTip_DeleteTask,Source={StaticResource Resources}}">
                                    <c1:C1ToolbarButton.Content>
                                        <TextBlock Text="&#xE106;" Style="{StaticResource SymbolText}" />
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <c1:C1ToolbarButton VerticalContentAlignment="Center" CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding OutdentTaskCommand}" ToolTipService.ToolTip="{Binding ToolTip_OutdentTask,Source={StaticResource Resources}}">
                                    <c1:C1ToolbarButton.Content>
                                        <Grid Style="{StaticResource MenuIcon}">
                                            <Viewbox Stretch="Uniform">
                                                <Canvas Width="16" Height="16">
                                                    <Path Data="M 1 1 V 2 H 11 V 1 H 1 z" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Path Data="M 1 4 V 5 H 11 V 4 H 1 z" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Path Data="M 1 7 V 8 H 6 V 7 H 1 z" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Rectangle Canvas.Left="10" Canvas.Top="9" Width="6" Height="4" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Polygon Points="11,6 5,11 11,16 " Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                </Canvas>
                                            </Viewbox>
                                        </Grid>
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <c1:C1ToolbarButton VerticalContentAlignment="Center" CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding IndentTaskCommand}" ToolTipService.ToolTip="{Binding ToolTip_IndentTask,Source={StaticResource Resources}}">
                                    <c1:C1ToolbarButton.Content>
                                        <Grid Style="{StaticResource MenuIcon}">
                                            <Viewbox Stretch="Uniform">
                                                <Canvas Width="16" Height="16">
                                                    <Path Data="M 6 1 V 2 H 16 V 1 H 6 z" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Path Data="M 6 4 V 5 H 16 V 4 H 6 z" Fill="{TemplateBinding ViewHeaderForeground}"/>
