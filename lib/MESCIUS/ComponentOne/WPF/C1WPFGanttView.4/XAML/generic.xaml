                                                </Canvas>
                                            </Viewbox>
                                        </Grid>
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <!--group-->
                                <c1:C1ToolbarDropDown VerticalHeaderAlignment="Center" x:Name="MenuGroup" ToolTipService.ToolTip="{Binding ToolTip_GroupBy,Source={StaticResource Resources}}">
                                    <c1:C1ToolbarDropDown.Header>
                                        <Grid Style="{StaticResource MenuIcon}" Margin="0,1,0,-1">
                                            <Viewbox Stretch="Uniform">
                                                <Canvas Width="16" Height="16">
                                                    <Rectangle Canvas.Left="1" Canvas.Top="3" Width="11" Height="3" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Rectangle Canvas.Left="4" Canvas.Top="9" Width="11" Height="3" Fill="{TemplateBinding ViewHeaderForeground}"/>
                                                    <Rectangle Canvas.Left="9" Canvas.Top="-2" Width="1" Height="7" Fill="{TemplateBinding ViewHeaderForeground}">
