<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:c="clr-namespace:System.Windows.Controls;assembly=PresentationFramework" 
                    xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
                    xmlns:res="clr-namespace:C1.WPF.GanttView.Resources" 
                    xmlns:c1GanttView="clr-namespace:C1.WPF.GanttView" 
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <c1:VisibilityConverter x:Key="VisibilityConverter"/>
    <res:Resources x:Key="Resources" />
    <c1GanttView:CalendarTodayCommand x:Key="TodayCommand"/>

    <Style x:Key="MenuIcon" TargetType="Grid">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="16"/>
    </Style>

    <Style x:Key="SymbolText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ViewHeaderForeground}"/>
    </Style>
     
    <Style x:Key="DropDownMenuItem" TargetType="{x:Type c1:C1MenuItem}">
        <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource TemplatedParent}}" />
    </Style>

    <Style x:Key="CheckableDropDownMenuItem" TargetType="{x:Type c1:C1MenuItem}" BasedOn="{StaticResource DropDownMenuItem}">
        <Setter Property="IsCheckable" Value="True"/>
    </Style>

    <Style x:Key="ToolBarSeparator" TargetType="{x:Type c1:C1Separator}">
        <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ViewHeaderForeground}"/>
        <Setter Property="Orientation" Value="Vertical"/>
    </Style>

    <Style x:Key="ContextMenuSeparator" TargetType="{x:Type Separator}">
        <Setter Property="Height" Value="2"/>
        <Setter Property="Visibility" Value="{Binding ShowCellMenu,Converter={StaticResource VisibilityConverter}}"/>
    </Style>

    <!--C1GanttView-->
    <Style TargetType="c1GanttView:C1GanttView">
        <Setter Property="Background" Value="White"/>
        <Setter Property="HighlightBackColor" Value="#A0BADDE9"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c1GanttView:C1GanttView">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <!-- toolstrip across the top, content below: grid, splitter, chart -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <!-- tool strip across the top -->
                            <ToolBar Grid.ColumnSpan="3" x:Name="MainToolBar" ToolBarTray.IsLocked="True" Height="{TemplateBinding ToolbarHeight}" Visibility="{TemplateBinding ShowToolbar, Converter={StaticResource VisibilityConverter}}" Background="{TemplateBinding ToolbarBackColor}">
                                <ToolBar.DataContext>
                                    <c1GanttView:ToolBarViewModel />
                                </ToolBar.DataContext>
                                <!--save/load-->
