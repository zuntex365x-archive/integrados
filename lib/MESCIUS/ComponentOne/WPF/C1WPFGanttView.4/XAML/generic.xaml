                                <c1:C1ToolbarButton VerticalContentAlignment="Center" CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding ShowProjectSummary}" ToolTipService.ToolTip="{Binding ToolTip_ShowProjectSummary,Source={StaticResource Resources}}">
