                                        <c1:C1MenuItem Style="{StaticResource DropDownMenuItem}" x:Name="MenuNewGroupBy" Command="{Binding ShowGroupByCommand}" Header="{Binding MenuItem_GroupBy_NewGroupBy,Source={StaticResource Resources}}" />
                                        <c1:C1MenuItem Style="{StaticResource CheckableDropDownMenuItem}" x:Name="MenuMaintainHierarchy" Command="{Binding MaintainHierarchyCommand}" Header="{Binding MenuItem_GroupBy_MaintainHierarchy,Source={StaticResource Resources}}"/>
