                                                </Canvas>
                                            </Viewbox>
                                        </Grid>
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <c1:C1ToolbarButton VerticalContentAlignment="Center" CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding InactiveTaskCommand}" ToolTipService.ToolTip="{Binding ToolTip_Inactive,Source={StaticResource Resources}}">
                                    <c1:C1ToolbarButton.Content>
                                        <TextBlock Text="&#xE0CE;" FontSize="10" Style="{StaticResource SymbolText}"/>
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <c1:C1ToolbarButton VerticalContentAlignment="Center" CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding SplitTaskCommand}" ToolTipService.ToolTip="{Binding ToolTip_SplitTask,Source={StaticResource Resources}}">
                                    <c1:C1ToolbarButton.Content>
                                        <TextBlock Text="&#xE0CD;" FontSize="10" Style="{StaticResource SymbolText}"/>
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <c1:C1ToolbarButton VerticalContentAlignment="Center" CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding AddBlankRowCommand}" ToolTipService.ToolTip="{Binding ToolTip_AddBlankRow,Source={StaticResource Resources}}">
                                    <c1:C1ToolbarButton.Content>
                                        <Grid Style="{StaticResource MenuIcon}">
                                            <Viewbox Stretch="Uniform">
                                                <Canvas Width="16" Height="16">
                                                    <Path Data="m 10 4 v 1 h 1 V 7 H 10 9 8 7 6 V 5 H 7 V 4 H 2 V 8 H 15 V 5 4 H 10 z M 5 7 H 3 V 5 h 2 v 2 z m 9 0 H 12 V 5 h 2 v 2 z" Fill="{TemplateBinding ViewHeaderForeground}" />
                                                    <Path Data="m 2 7 v 3 H 15 V 7 H 1 z" Fill="{TemplateBinding ViewHeaderForeground}" />
