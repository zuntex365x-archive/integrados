                                                            <MatrixTransform Matrix="0.7066 -0.7076 0.7076 0.7066 -2.8298 7.6651"/>
                                                        </Rectangle.RenderTransform>
                                                    </Rectangle>
                                                </Canvas>
                                            </Viewbox>
                                        </Grid>
                                    </c1:C1ToolbarDropDown.Header>
                                    <c1:C1MenuList>
                                        <c1:C1MenuItem Style="{StaticResource CheckableDropDownMenuItem}" GroupName="GroupItems" x:Name="MenuTaskMode" Command="{Binding GroupByTaskModeCommand}" Header="{Binding MenuItem_GroupBy_TaskMode,Source={StaticResource Resources}}"/>
                                        <c1:C1MenuItem Style="{StaticResource CheckableDropDownMenuItem}" GroupName="GroupItems" x:Name="MenuTaskComplete" Command="{Binding GroupByTaskCompeletedCommand}" Header="{Binding MenuItem_GroupBy_TaskCompleteVsTaskIncomplete,Source={StaticResource Resources}}"/>
                                        <c1:C1MenuItem Style="{StaticResource CheckableDropDownMenuItem}" GroupName="GroupItems" x:Name="MenuDuration" Command="{Binding GroupByDurationCommand}" Header="{Binding MenuItem_GroupBy_Duration,Source={StaticResource Resources}}"/>
                                        <c1:C1MenuItem Style="{StaticResource CheckableDropDownMenuItem}" GroupName="GroupItems" x:Name="MenuMilestones" Command="{Binding GroupByMilestoneCommand}" Header="{Binding MenuItem_GroupBy_Milestones,Source={StaticResource Resources}}"/>
                                        <c1:C1MenuItem Style="{StaticResource CheckableDropDownMenuItem}" GroupName="GroupItems" x:Name="MenuResource" Command="{Binding GroupByResourceCommand}" Header="{Binding MenuItem_GroupBy_Resource,Source={StaticResource Resources}}"/>
                                        <c1:C1MenuItem Style="{StaticResource CheckableDropDownMenuItem}" GroupName="GroupItems" x:Name="MenuStatus" Command="{Binding GroupByStatusDateCommand}" Header="{Binding MenuItem_GroupBy_Status,Source={StaticResource Resources}}"/>
