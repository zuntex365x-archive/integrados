                                                    <Path Fill="{TemplateBinding ViewHeaderForeground}" Data="M23.802,96.72L41.985,46.48C42.844,44.104,45.1,42.522,47.628,42.522L115.847,42.522 115.847,37.022C115.847,33.709,113.16,31.022,109.847,31.022L67.202,31.022 57.286,21.105C56.16,19.979,54.635,19.347,53.043,19.347L26.463,19.347C23.15,19.347,20.463,22.034,20.463,25.347L20.463,91.347C20.462,93.705,21.825,95.738,23.802,96.72z"/>
                                                </Canvas>
                                            </Viewbox>
                                        </Grid>
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <c1:C1ToolbarButton VerticalContentAlignment="Center" CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding SaveCommand}" ToolTipService.ToolTip="{Binding ToolTip_Save,Source={StaticResource Resources}}">
                                    <c1:C1ToolbarButton.Content>
                                        <TextBlock Text="&#xE105;" FontSize="14" Style="{StaticResource SymbolText}"/>
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <c1:C1Separator Style="{StaticResource ToolBarSeparator}"/>
                                <!--undo/redo-->
                                <c1:C1ToolbarButton VerticalContentAlignment="Center" CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding UndoCommand}" ToolTipService.ToolTip="{Binding ToolTip_Undo,Source={StaticResource Resources}}">
                                    <c1:C1ToolbarButton.Content>
                                        <TextBlock Text="&#xE10E;" Style="{StaticResource SymbolText}"/>
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <c1:C1ToolbarButton VerticalContentAlignment="Center" CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}" Command="{Binding RedoCommand}" ToolTipService.ToolTip="{Binding ToolTip_Redo,Source={StaticResource Resources}}">
                                    <c1:C1ToolbarButton.Content>
                                        <TextBlock Text="&#xE10D;" Style="{StaticResource SymbolText}"/>
                                    </c1:C1ToolbarButton.Content>
                                </c1:C1ToolbarButton>
                                <c1:C1Separator Style="{StaticResource ToolBarSeparator}"/>
