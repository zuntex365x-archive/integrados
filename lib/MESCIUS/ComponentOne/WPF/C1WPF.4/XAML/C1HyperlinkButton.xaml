<ResourceDictionary 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
	xmlns:c1="clr-namespace:C1.WPF">

	<Style TargetType="c1:C1HyperlinkButton">
		<Setter Property="Foreground" Value="Blue"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="c1:C1HyperlinkButton">
					<TextBlock>
						<Hyperlink x:Name="Hyperlink" Focusable="False">
							<ContentPresenter />
						</Hyperlink>
					</TextBlock>
                </ControlTemplate>
                
                    
            </Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>