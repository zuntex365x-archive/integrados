    <!-- CornerRadius @ ScrollBar -->
    <CornerRadius x:Key="ScrollBarCornerRadius">0</CornerRadius>
    <!-- CornerRadius @ ScrollBar InnerBorder -->
    <CornerRadius x:Key="ScrollBarInnerCornerRadius">0</CornerRadius>

    <!-- BrushBuilder @ Vertical ScrollBar Background -->
    <Style x:Key="ScrollVerticalBrush" TargetType="c1:C1BrushBuilder">
        
        
        <Setter Property="DesignBrush">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                    <GradientStop Color="#E1E1E1" Offset="0" />
                    <GradientStop Color="#EDEDED" Offset="0.20" />
                    <GradientStop Color="#EDEDED" Offset="0.80" />
                    <GradientStop Color="#E3E3E3" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="DesignColor" Value="#FFDCDCDC" />
    </Style>
    <!-- BrushBuilder @ Horizontal ScrollBar Background -->
    <Style x:Key="ScrollHorizontalBrush" TargetType="c1:C1BrushBuilder">
        
        
        <Setter Property="DesignBrush">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#E1E1E1" Offset="0" />
                    <GradientStop Color="#EDEDED" Offset="0.20" />
                    <GradientStop Color="#EDEDED" Offset="0.80" />
                    <GradientStop Color="#E3E3E3" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="DesignColor" Value="#FFDCDCDC" />
    </Style>

