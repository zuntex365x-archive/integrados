	<!--******************* C1LayoutTransformer *****************-->
	<Style TargetType="c1:C1LayoutTransformer">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="c1:C1LayoutTransformer">
					<Grid x:Name="TransformRoot" Background="{TemplateBinding Background}">
						<ContentPresenter x:Name="Presenter" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
