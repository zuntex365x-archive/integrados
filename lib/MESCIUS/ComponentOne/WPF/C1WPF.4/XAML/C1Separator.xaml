	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="/C1.WPF.4;component/themes/Common.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<!--******************** C1Separator ********************-->
	<Style TargetType="c1:C1Separator">
		<Setter Property="Background" Value="{StaticResource BaseColorBrush}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="c1:C1Separator">
					<Grid>
						<Rectangle x:Name="VerticalTemplate" Fill="{TemplateBinding Background}" Width="1" Margin="2 0" />
						<Rectangle x:Name="HorizontalTemplate" Fill="{TemplateBinding Background}" Height="1" Margin="0 2" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
