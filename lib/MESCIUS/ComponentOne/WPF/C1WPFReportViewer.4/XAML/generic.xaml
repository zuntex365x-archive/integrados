        <Setter Property="c1:ClearStyleExtensions.FocusBrush" Value="{StaticResource WpfInputFocusBrush}" />
        <!--Modified by Noela @20120531-->
        <Setter Property="BorderThickness" Value="{StaticResource ReportViewerToolbarThickness}" />
        <!--End Modified by Noela @20120531-->
        <Setter Property="Foreground" Value="{StaticResource ForegroundTextBoxBrushColor}" />
        <Setter Property="Padding" Value="7 3" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c1ReportViewer:C1ReportViewerToolbar">
                    <Grid>
                    	<Border VerticalAlignment="Bottom" Height="5" Margin="0,0,0,-5">
                    		<Border.Background>
                    			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    				<GradientStop Color="#99000000" Offset="0" />
                    				<GradientStop Offset="1" />
                    			</LinearGradientBrush>
                    		</Border.Background>
                    	</Border>
