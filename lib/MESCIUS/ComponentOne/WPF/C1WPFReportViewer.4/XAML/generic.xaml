    <!-- Style @ ReportViewer -->
    <Style TargetType="c1ReportViewer:C1ReportViewer">
		<Setter Property="Background" Value="{StaticResource InputBackgroundBrush}" />
		<Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
		<Setter Property="BorderThickness" Value="{StaticResource GeneralThickness}" />
		<Setter Property="Foreground" Value="{StaticResource ForegroundTextBoxBrushColor}" />
		<Setter Property="SelectionBackground" Value="#7F0050F0" />
		<Setter Property="PageSeparation" Value="4" />
        <Setter Property="ToolbarStyle" Value="{StaticResource C1ReportViewerToolbarDefaultStyle}" />
        <Setter Property="ScrollBarStyle" Value="{StaticResource ScrollBarClearStyle}" />
        <Setter Property="PageTemplate">
			<Setter.Value>
				<DataTemplate>
					<Grid Margin="{Binding Source.PageSeparation}" Cursor="IBeam">
						<Grid.Resources>
                            <c1:ZoomToScaleTransformConverter x:Key="zoomConverter" />
						</Grid.Resources>
						<Border Background="#19000000" Margin="4,4,-4,-4" CornerRadius="2" />
						<Border Background="#19000000" Margin="3,3,-3,-3" CornerRadius="2" />
						<Border Background="#19000000" Margin="2,2,-2,-2" CornerRadius="2" />
						<Border Background="#19000000" Margin="1,1,-1,-1" CornerRadius="2" />
						<Border Background="White" />
						<c1:C1LayoutTransformer LayoutTransform="{Binding Source.Zoom, Converter={StaticResource zoomConverter}}">
							<ContentPresenter Content="{Binding Content}" />
						</c1:C1LayoutTransformer>
						<Border BorderThickness="1" BorderBrush="#FF858585" />
					</Grid>
				</DataTemplate>
			</Setter.Value>
		</Setter>
		<Setter Property="Template">
			<Setter.Value>
                <ControlTemplate TargetType="c1ReportViewer:C1ReportViewer">
                    <Border BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
					    <Grid>
						    <Grid.RowDefinitions>
							    <RowDefinition Height="Auto" />
							    <RowDefinition />
						    </Grid.RowDefinitions>

                            <c1ReportViewer:C1ReportViewerToolbar Viewer="{Binding RelativeSource={RelativeSource TemplatedParent}}" Visibility="{TemplateBinding ToolbarVisibility}" Style="{TemplateBinding ToolbarStyle}" />
                        
						    <Grid Grid.Row="1">
							    <Grid.ColumnDefinitions>
								    <ColumnDefinition Width="*" />
								    <ColumnDefinition Width="Auto" />
							    </Grid.ColumnDefinitions>
							    <Grid.RowDefinitions>
								    <RowDefinition Height="*" />
								    <RowDefinition Height="Auto" />
							    </Grid.RowDefinitions>
							    <Grid x:Name="Content" Cursor="{TemplateBinding Cursor}" Margin="{TemplateBinding Padding}" Grid.Column="0" Grid.Row="0" Background="{TemplateBinding Background}" />
							    <ScrollBar x:Name="VerticalScrollBar" Cursor="Arrow" Grid.Column="1" Grid.Row="0" Orientation="Vertical" SmallChange="16" IsTabStop="False" Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" Value="{Binding VerticalOffset, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" ViewportSize="{TemplateBinding ViewportHeight}" LargeChange="{TemplateBinding ViewportHeight}" Maximum="{TemplateBinding ScrollableHeight}" Style="{TemplateBinding ScrollBarStyle}" Margin="0,0,0,1" />
							    <ScrollBar x:Name="HorizontalScrollBar" Cursor="Arrow" Grid.Column="0" Grid.Row="1" Orientation="Horizontal" SmallChange="16" IsTabStop="False" Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}" Value="{Binding HorizontalOffset, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" ViewportSize="{TemplateBinding ViewportWidth}" LargeChange="{TemplateBinding ViewportWidth}" Maximum="{TemplateBinding ScrollableWidth}" Style="{TemplateBinding ScrollBarStyle}" Margin="0,0,1,0" />
							    <Rectangle Grid.Column="1" Grid.Row="1" Fill="{TemplateBinding Background}" />
						    </Grid>
					    </Grid>
                    </Border>
                </ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
