	<ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/C1.WPF.4;component/themes/Common.xaml" />
        <ResourceDictionary Source="/C1.WPF.4;component/themes/C1Button.xaml" />
        <ResourceDictionary Source="/C1.WPF.4;component/themes/C1ScrollBar.xaml" />
    </ResourceDictionary.MergedDictionaries>
	
    <c1:VisibilityConverter x:Key="boolToVisibility" />

    <c1ReportViewerResources:C1_Silverlight_ReportViewer x:Key="ReportViewerResources" />
    
	<!--******************* Loading ********************-->

	<Style x:Key="LoadingShapeBBStyle" TargetType="c1:C1BrushBuilder">
		<Setter Property="DesignBrush">
			<Setter.Value>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FFA8C0D7" />
					<GradientStop Color="#FF82AACF" Offset="1" />
				</LinearGradientBrush>
			</Setter.Value>
		</Setter>
		<Setter Property="DesignColor" Value="{StaticResource BaseColor}" />
	</Style>
	<Style x:Key="LoadingShapeBorderBBStyle" TargetType="c1:C1BrushBuilder">
		<Setter Property="DesignBrush">
			<Setter.Value>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF93AdC5" Offset="0.3" />
					<GradientStop Color="#FF88A3BC" Offset="0.5" />
					<GradientStop Color="#FF94ADC5" Offset="0.7" />
				</LinearGradientBrush>
			</Setter.Value>
		</Setter>
		<Setter Property="DesignColor" Value="{StaticResource BaseColor}" />
	</Style>
	<Style x:Key="LoadingDarkShadeBBStyle" TargetType="c1:C1BrushBuilder">
		<Setter Property="DesignBrush">
			<Setter.Value>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#00A8C0D7" Offset="0" />
					<GradientStop Color="#FF9BB1C5" Offset="0.45" />
					<GradientStop Color="#FF9BB1C5" Offset="0.55" />
					<GradientStop Color="#0082AACF" Offset="1" />
				</LinearGradientBrush>
			</Setter.Value>
		</Setter>
		<Setter Property="DesignColor" Value="{StaticResource BaseColor}" />
	</Style>

    <!-- Brush @ ReportViewer Background -->
	<LinearGradientBrush x:Key="ReportViewerBackgroundBrush" StartPoint="0.5,0" EndPoint="0.5,1">
		<GradientStop Color="#FFD1DCE8" Offset="0" />
		<GradientStop Color="#FFFAFBFC" Offset="0.7" />
	</LinearGradientBrush>
	<!-- Brush @ ReportViewer Separator Background -->
	<SolidColorBrush x:Key="ReportViewerSeparatorBrush" Color="#FFBAC8D8" />
	<!-- Brush @ ReportViewer Separator Background -->
	<SolidColorBrush x:Key="ReportViewerSeparatorBorderBrush" Color="#CCFFFFFF" />
	<!-- Style @ ReportViewer Arrow Icon -->
	<Style x:Key="ReportViewerArrowStyle" TargetType="Path">
		<Setter Property="Stroke" Value="#FF256495" />
		<Setter Property="Fill">
			<Setter.Value>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                	<GradientStop Color="#FF92BBDB" Offset="0.45" />
                    <GradientStop Color="#FF4D8BCC" Offset="0.55" />
				</LinearGradientBrush>
			</Setter.Value>
		</Setter>
	</Style>

    <!--Added by Noela @20120531-->
    <Thickness x:Key="ReportViewerToolbarThickness">0 0 0 1</Thickness>
    <!--End Added by Noela @20120531-->

    <!-- C1ReportViewerToolbarDefaultStyle @ ReportViewer -->
