                                	<Rectangle Stroke="#FFC4C4C9" Margin="1,0,0,0">
                                		<Rectangle.Fill>
                                			<LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                                				<GradientStop Color="White" Offset="0.251" />
                                				<GradientStop Color="#FFBDCAE1" Offset="0.563" />
                                				<GradientStop Color="White" Offset="0.678" />
