                                <Grid Height="14" Width="16">
                                	<Rectangle Margin="3,0" Width="10" RadiusX="1" RadiusY="1">
                                		<Rectangle.Fill>
                                			<LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                                				<GradientStop Color="White" Offset="0.56" />
