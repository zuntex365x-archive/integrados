                                    <Ellipse HorizontalAlignment="Left" Stroke="#FF5B6168" Width="12" Height="12" VerticalAlignment="Top" Margin="1,1,0,0">
                                    	<Ellipse.Fill>
                                    		<RadialGradientBrush GradientOrigin="0.288,0.253">
                                    			<GradientStop Color="#FFF2FFFF" Offset="0.328" />
                                    			<GradientStop Color="#FF8ECEF5" Offset="1" />
                                    		</RadialGradientBrush>
