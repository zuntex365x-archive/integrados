                                        <Grid>
                                            <Grid.Resources>
                                                <c1ReportViewer:ZoomConverter x:Key="converter" />
                                            </Grid.Resources>
                                            <TextBlock Text="{Binding Converter={StaticResource converter}}" />
                                        </Grid>
                                    </DataTemplate>
                                </c1:C1ComboBox.ItemTemplate>
                            </c1:C1ComboBox>
