    <c1FlexGridGroupPanelResources:C1_Silverlight_FlexGrid_GroupPanel x:Key="FlexGridGroupPanelResources" />
    
    <Style TargetType="c1FlexGridGroupPanel:C1FlexGridGroupPanel">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c1FlexGridGroupPanel:C1FlexGridGroupPanel">
                    <Grid Background="{TemplateBinding Background}">
                        <TextBlock Name="Watermark" Margin="8" Text="{Binding DefaultWatermarkText, Source={StaticResource FlexGridGroupPanelResources}}" />
                        <StackPanel Name="Markers" Margin="8" Orientation="Horizontal" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>