<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
    xmlns:c1dfView="clr-namespace:C1.WPF.DataFilter.View"
    xmlns:c1df="clr-namespace:C1.WPF.DataFilter">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/C1.WPF.4.5.2;component/themes/Common.xaml" />
        <ResourceDictionary Source="/C1.WPF.4.5.2;component/themes/C1TreeView.xaml" />
        <ResourceDictionary Source="/C1.WPF.4.5.2;component/themes/C1Button.xaml" />
        <ResourceDictionary Source="/C1.WPF.4.5.2;component/themes/C1Menu.xaml" />
        <ResourceDictionary Source="/C1.WPF.Extended.4.5.2;component/Themes/C1Expander.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <c1df:CombinationComboHeaderConverter x:Key="CombinationComboHeaderConverter" />

    <Style TargetType="c1df:DataFilterPresenter">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="4"/>

        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c1df:DataFilterPresenter">
                    <Border Padding="{TemplateBinding Padding}" Margin="{TemplateBinding Margin}" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsPresenter x:Name="Items" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" />
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate x:Key="NormalCheckListFilterItem">
        <CheckBox
            x:Name="CheckBoxItem"
            CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
            Command="{Binding CheckListItemChecked, RelativeSource={RelativeSource AncestorType=c1dfView:CheckListFilterPresenter}}"
            Content="{Binding DisplayValue}"
            VerticalContentAlignment="Center"
            IsChecked="{Binding Selected, Mode=OneWay}"   
            Padding="{Binding ItemPadding, RelativeSource={RelativeSource AncestorType=c1dfView:CheckListFilterPresenter}}"
            Margin="{Binding ItemMargin, RelativeSource={RelativeSource AncestorType=c1dfView:CheckListFilterPresenter}}"
            Background="{Binding Background, RelativeSource={RelativeSource AncestorType=c1dfView:CheckListFilterPresenter}}"
            Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=c1dfView:CheckListFilterPresenter}}"/>
    </DataTemplate>

    <DataTemplate x:Key="SummaryCheckListFilterItem">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ContentPresenter x:Name="SummaryCheckBoxItem" Grid.Column="0" ContentTemplate="{StaticResource NormalCheckListFilterItem}" />
            <TextBlock
                x:Name="SummaryItem"
                Grid.Column="1"
                TextAlignment="Right"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="{Binding Background, RelativeSource={RelativeSource AncestorType=c1dfView:CheckListFilterPresenter}}"
                Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=c1dfView:CheckListFilterPresenter}}"
            />
        </Grid>
    </DataTemplate>

    <c1dfView:CheckListTemplateSelector
        x:Key="CheckListTemplateSelector"
        NormalTemplate="{StaticResource NormalCheckListFilterItem}"
        SummaryTemplate="{StaticResource SummaryCheckListFilterItem}"
    />
    <Style TargetType="c1dfView:CheckListFilterPresenter">
        <Setter Property="ItemTemplateSelector" Value="{StaticResource CheckListTemplateSelector}" />
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <c1:C1WrapPanel ItemWidth="{Binding Path=ItemWidth,RelativeSource={RelativeSource AncestorType=c1dfView:CheckListFilterPresenter}}"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c1dfView:CheckListFilterPresenter">
                    <Border CornerRadius="{TemplateBinding ExpandedCornerRadius}" Padding="{TemplateBinding Padding}" Margin="{TemplateBinding Margin}" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                        <c1:C1Expander x:Name="Header" CornerRadius="{TemplateBinding ExpandedCornerRadius}" Foreground="{TemplateBinding Foreground}" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" HeaderBackground="{TemplateBinding Background}" HeaderForeground="{TemplateBinding Foreground}" ExpandedBackground="{TemplateBinding ExpandedBackground}" MouseOverBrush="{TemplateBinding ExpandedMouseOverBrush}" Header="{TemplateBinding HeaderContent}" HeaderTemplate="{TemplateBinding HeaderTemplate}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <TextBox x:Name="SearchBox" Margin="5" Visibility="Collapsed" Grid.Row="0" />
                                <CheckBox x:Name="SelectAll" Content="{TemplateBinding SelectAll}" Margin="10 5 5 5" Grid.Row="1" Foreground="{TemplateBinding Foreground}" Background="{TemplateBinding Background}" IsThreeState="True" />
                                <ItemsPresenter Margin="5" x:Name="Items" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Grid.Row="2" />
                            </Grid>
                        </c1:C1Expander>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="c1dfView:RangeFilterPresenter">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c1dfView:RangeFilterPresenter">
                    <Border CornerRadius="{TemplateBinding ExpandedCornerRadius}" Padding="{TemplateBinding Padding}" Margin="{TemplateBinding Margin}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                        <c1:C1Expander x:Name="Header" CornerRadius="{TemplateBinding ExpandedCornerRadius}" Foreground="{TemplateBinding Foreground}" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" HeaderBackground="{TemplateBinding Background}" HeaderForeground="{TemplateBinding Foreground}" ExpandedBackground="{TemplateBinding ExpandedBackground}" MouseOverBrush="{TemplateBinding ExpandedMouseOverBrush}" Header="{TemplateBinding HeaderContent}" HeaderTemplate="{TemplateBinding HeaderTemplate}">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Margin="0 0 0 5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock x:Name="From" Margin="0 0 5 0" VerticalAlignment="Center" Text="{TemplateBinding From}" Grid.Column="0" />
                                    <ContentPresenter VerticalAlignment="Center" Margin="0 0 5 0" x:Name="LowerEditorPresenter" Content="{TemplateBinding LowerEditorContent}" ContentTemplate="{TemplateBinding LowerEditorTemplate}" Grid.Column="1" />
                                    <TextBlock x:Name="To" Margin="0 0 5 0" VerticalAlignment="Center" Text="{TemplateBinding To}" Grid.Column="2" />
                                    <ContentPresenter VerticalAlignment="Center" Margin="0 0 5 0" x:Name="UpperEditorPresenter" Content="{TemplateBinding UpperEditorContent}" ContentTemplate="{TemplateBinding UpperEditorTemplate}" Grid.Column="3" />
                                </Grid>

                                <c1:C1RangeSlider x:Name="Slider" HorizontalAlignment="Stretch" Grid.Row="1" />
                            </Grid>
                        </c1:C1Expander>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="c1dfView:DateRangeFilterPresenter" BasedOn="{StaticResource {x:Type c1dfView:RangeFilterPresenter}}">
        <Setter Property="Foreground" Value="{Binding Path=ItemForeground,RelativeSource={RelativeSource AncestorType=c1df:C1DataFilter}}"/>
        <Setter Property="LowerEditorTemplate">
            <Setter.Value>
                <DataTemplate>
                    <c1:C1DatePicker Foreground="{Binding Path=Foreground,RelativeSource={RelativeSource AncestorType=c1dfView:DateRangeFilterPresenter}}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="UpperEditorTemplate">
            <Setter.Value>
                <DataTemplate>
                    <c1:C1DatePicker Foreground="{Binding Path=Foreground,RelativeSource={RelativeSource AncestorType=c1dfView:DateRangeFilterPresenter}}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="c1dfView:NumericRangeFilterPresenter" BasedOn="{StaticResource {x:Type c1dfView:RangeFilterPresenter}}">
        <Setter Property="Foreground" Value="{Binding Path=ItemForeground,RelativeSource={RelativeSource AncestorType=c1df:C1DataFilter}}"/>
        <Setter Property="LowerEditorTemplate">
            <Setter.Value>
                <DataTemplate>
                    <c1:C1NumericBox Foreground="{Binding Path=Foreground,RelativeSource={RelativeSource AncestorType=c1dfView:NumericRangeFilterPresenter}}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="UpperEditorTemplate">
            <Setter.Value>
                <DataTemplate>
                    <c1:C1NumericBox Foreground="{Binding Path=Foreground,RelativeSource={RelativeSource AncestorType=c1dfView:NumericRangeFilterPresenter}}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="c1dfView:BoolFilterPresenter">
        <Setter Property="Foreground" Value="{Binding Path=ItemForeground,RelativeSource={RelativeSource AncestorType=c1df:C1DataFilter}}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c1dfView:BoolFilterPresenter">
                    <Border CornerRadius="{TemplateBinding ExpandedCornerRadius}" Padding="{TemplateBinding Padding}" Margin="{TemplateBinding Margin}" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                        <c1:C1Expander x:Name="Header" CornerRadius="{TemplateBinding ExpandedCornerRadius}" Foreground="{TemplateBinding Foreground}" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" HeaderBackground="{TemplateBinding Background}" HeaderForeground="{TemplateBinding Foreground}" ExpandedBackground="{TemplateBinding ExpandedBackground}" MouseOverBrush="{TemplateBinding ExpandedMouseOverBrush}" Header="{TemplateBinding HeaderContent}" HeaderTemplate="{TemplateBinding HeaderTemplate}">
                            <CheckBox Margin="5" VerticalAlignment="Center" x:Name="Condition" Content="{TemplateBinding ConditionContent}" ContentTemplate="{TemplateBinding ConditionContentTemplate}" Grid.Column="0"
                                      Foreground="{TemplateBinding Foreground}"/>
                        </c1:C1Expander>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="c1dfView:CustomFilterPresenter">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c1dfView:CustomFilterPresenter">
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="FilterNode" TargetType="{x:Type c1:C1TreeViewItem}">
        <Setter Property="IsExpanded" Value="True" />
        <Setter Property="Template" Value="{StaticResource TreeItemTemplate}" />
    </Style>

