    <Style TargetType="c1df:C1FilterEditor">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c1df:C1FilterEditor">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid Background="{TemplateBinding Background}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <c1:C1TreeView
                                x:Name="FilterTree" AutoSearch="False" KeyboardNavigation="False" Grid.Row="0"
                                AllowDragDrop="{TemplateBinding AllowDragDrop}"
                                Background="{TemplateBinding Background}" Foreground="{TemplateBinding Foreground}" />
                            <StackPanel Grid.Row="1" Orientation="Horizontal" FlowDirection="RightToLeft">
                                <Button
                                    x:Name="Reset" Margin="10 5 5 5" Content="Reset Filter" Padding="5"
                                    />
                                <Button
                                    x:Name="Apply" Margin="5" Content="Apply Filter" Padding="5"
                                    />
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="c1df:C1DataFilter">
