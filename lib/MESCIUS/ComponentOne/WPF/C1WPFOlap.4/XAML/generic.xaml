    <!-- C1FormatEditor -->
    <Style TargetType="local:C1FormatEditor">
        <Setter Property="Foreground" Value="{StaticResource ForegroundTextBoxBrushColor}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:C1FormatEditor">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid x:Name="Root">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!-- predefined formats -->
                            <ListBox Name="ListFormats" Margin="4" />
                            <!-- customization area -->
                            <StackPanel Grid.Column="1" Margin="4">
                                <StackPanel Orientation="Horizontal" x:Name="_pSample">
                                    <TextBlock Text="{Binding Path=Sample, Source={StaticResource Resources}}" VerticalAlignment="Center" Margin="4" />
                                    <TextBlock Name="LblSample" Text="12.000" FontWeight="Bold" Margin="4" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" x:Name="PCustom">
                                    <TextBlock Text="{Binding Path=CustomFormat, Source={StaticResource Resources}}" VerticalAlignment="Center" Margin="4" />
                                    <TextBox Name="TxtCustom" Width="80" Margin="4" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" x:Name="PDecimals">
                                    <TextBlock Text="{Binding Path=DecimalPlaces, Source={StaticResource Resources}}" VerticalAlignment="Center" Margin="4" />
                                    <c1:C1NumericBox Name="NumDec" Value="2" Format="0" Width="80" Minimum="0" Maximum="12" Margin="4" />
                                </StackPanel>
                                
                                
                <CheckBox TextBlock.Foreground="{TemplateBinding Foreground}" x:Name="ChkThousand" Content="{Binding Path=UseThousandSeparator, Source={StaticResource Resources}}" Margin="4" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

