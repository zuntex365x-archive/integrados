    <!-- C1OlapReportOptions -->
    <Style TargetType="local:C1OlapReportOptions">
         <Setter Property="Foreground" Value="{StaticResource ForegroundTextBoxBrushColor}" />
        <Setter Property="BottomMargin" Value="2" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:C1OlapReportOptions">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid x:Name="Root">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <!-- main content -->
                            <c:TabControl Name="Tab">
                                <c:TabItem Header="{Binding Path=Page, Source={StaticResource Resources}}" Name="TabPage">
                                    <local:C1OlapMarginOptions x:Name="MarginOptions" Foreground="{TemplateBinding Foreground}" LeftMargin="{Binding LeftMargin, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" TopMargin="{Binding TopMargin, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" BottomMargin="{Binding BottomMargin, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" RightMargin="{Binding RightMargin, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" LeftPadding="{Binding LeftPadding, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" TopPadding="{Binding TopPadding, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" BottomPadding="{Binding BottomPadding, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" RightPadding="{Binding RightPadding, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" />
                                </c:TabItem>
                                <c:TabItem Header="{Binding Path=HeaderFooter, Source={StaticResource Resources}}" Name="TabHeader">
                                    <local:C1OlapHeaderOptions x:Name="HeaderOptions" Foreground="{TemplateBinding Foreground}" HeaderLeft="{Binding HeaderLeft, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" HeaderCenter="{Binding HeaderCenter, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" HeaderRight="{Binding HeaderRight, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" FooterLeft="{Binding FooterLeft, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" FooterCenter="{Binding FooterCenter, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" FooterRight="{Binding FooterRight, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" ShowHeaderSeparator="{Binding ShowHeaderSeparator, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" ShowFooterSeparator="{Binding ShowFooterSeparator, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" />
                                </c:TabItem>
                                <c:TabItem Header="{Binding Path=ReportContent, Source={StaticResource Resources}}" Name="TabContent">
                                    <local:C1OlapContentOptions x:Name="ContentOptions" Foreground="{TemplateBinding Foreground}" IncludeGrid="{Binding IncludeGrid, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" IncludeChart="{Binding IncludeChart, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" IncludeRaw="{Binding IncludeRaw, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" GridScale="{Binding GridScale, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" ChartScale="{Binding ChartScale, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" RawScale="{Binding RawScale, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" />
                                </c:TabItem>
                            </c:TabControl>
                            <!-- OK, Cancel buttons -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
                                <Button x:Name="BtnOk" Content="{Binding Path=OK, Source={StaticResource Resources}}" Width="75" Margin="4" />
                                <Button x:Name="BtnCancel" Content="{Binding Path=Cancel, Source={StaticResource Resources}}" Width="75" Margin="4" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- PrintPageTemplate -->
    <Style TargetType="local:PrintPageTemplate">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:PrintPageTemplate">
                    <Grid x:Name="Root">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="96" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="96" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="96" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="96" />
                        </Grid.ColumnDefinitions>
                        <!-- header -->
                        <Border x:Name="HeaderSeparator" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0 12" BorderBrush="Black" BorderThickness="0 0 0 1" />
                        <Grid Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0 12">
                            <TextBlock x:Name="HeaderLeft" Text="{TemplateBinding HeaderLeft}" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
                            <TextBlock x:Name="HeaderCenter" Text="{TemplateBinding HeaderCenter}" VerticalAlignment="Bottom" HorizontalAlignment="Center" />
                            <TextBlock x:Name="HeaderRight" Text="{TemplateBinding HeaderRight}" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
                        </Grid>
                        <!-- footer -->
                        <Border x:Name="FooterSeparator" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0 12" BorderBrush="Black" BorderThickness="0 1 0 0" />
                        <Grid Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0 12">
                            <TextBlock x:Name="FooterLeft" Text="{TemplateBinding FooterLeft}" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
                            <TextBlock x:Name="FooterCenter" Text="{TemplateBinding FooterCenter}" VerticalAlignment="Bottom" HorizontalAlignment="Center" />
                            <TextBlock x:Name="FooterRight" Text="{TemplateBinding FooterRight}" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
                        </Grid>
                        <Grid x:Name="PaddingGrid" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="0" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0" />
                            </Grid.ColumnDefinitions>
                            
                            
        					<Viewbox x:Name="ContentBox" Grid.Row="1" Grid.Column="1" Stretch="{TemplateBinding Stretch}">
								<ContentPresenter></ContentPresenter>
							</Viewbox>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>