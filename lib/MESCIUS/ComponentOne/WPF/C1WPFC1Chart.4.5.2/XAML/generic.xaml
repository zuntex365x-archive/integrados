    <Style TargetType="{x:Type c1c:C1Chart}" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c1c:C1Chart}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" 
                  BorderThickness="{TemplateBinding BorderThickness}"
                  Background="{TemplateBinding Background}"
                  CornerRadius="{DynamicResource C1Chart_CornerRadius}"
                  Padding="{TemplateBinding Padding}"
                  >
                        <ContentPresenter HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Background" Value="{DynamicResource C1Chart_Background_Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource C1Chart_Foreground_Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource C1Chart_Border_Brush}" />
        <Setter Property="BorderThickness" Value="{DynamicResource C1Chart_Border_Thickness}" />

        <Setter Property="Margin" Value="{DynamicResource C1Chart_Margin}" />
        <Setter Property="Padding" Value="{DynamicResource C1Chart_Padding}" />

        <Setter Property="CustomPalette" Value="{DynamicResource C1Chart_CustomPalette}" />
    </Style>

    <Style TargetType="{x:Type c1c:ChartView}" >
        <Setter Property="ViewTemplate">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c1c:C1Chart}">
                    <Border BorderBrush="{DynamicResource C1Chart_ChartAreaBorder_Brush}" 
                  BorderThickness="{DynamicResource C1Chart_ChartAreaBorder_Thickness}"
                  Background="{DynamicResource C1Chart_ChartAreaBackground_Brush}"
                  CornerRadius="{DynamicResource C1Chart_ChartArea_CornerRadius}"
                  Padding="{DynamicResource C1Chart_ChartArea_Padding}"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="PlotBackground" Value="{DynamicResource C1Chart_PlotAreaBackground_Brush}" />
        <Setter Property="Background" Value="{DynamicResource C1Chart_ChartAreaBackground_Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource C1Chart_ChartAreaForeground_Brush}" />
    </Style>

    <Style TargetType="{x:Type c1c:Axis}">
        <Setter Property="MajorGridStroke" 
            Value="{DynamicResource C1Chart_AxisMajorGridStroke_Brush}"/>
        <!--    <Setter Property="MinorGridStroke" 
            Value="{DynamicResource C1Chart_AxisMinorGridStroke_Brush}"/>-->
    </Style>
</ResourceDictionary>
