<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:C1.WPF.Chart.Finance">
    <Style TargetType="{x:Type local:C1FinancialChart}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:C1FinancialChart}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <local:FinancialRenderCanvas x:Name="canvas" Background="Transparent" />
                            <Canvas x:Name="Layers" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ToolTip">
            <Setter.Value>
                <ToolTip></ToolTip>
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="10">
        </Setter>
    </Style>
</ResourceDictionary>
