<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:C1.WPF.Chart.Interaction">
    <SolidColorBrush x:Key="LineBrush">Black</SolidColorBrush>
    <Style TargetType="{x:Type local:C1LineMarker}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:C1LineMarker}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Canvas x:Name="Root">
                            <Line x:Name="VerticalLine"  StrokeThickness="{TemplateBinding LineWidth}" Stroke="{TemplateBinding LineBrush}" IsHitTestVisible="False" SnapsToDevicePixels="True" />
                            <Line x:Name="HorizontalLine" StrokeThickness="{TemplateBinding LineWidth}" Stroke="{TemplateBinding LineBrush}" IsHitTestVisible="False" SnapsToDevicePixels="True" />
                            <Border x:Name="Content" Background="White" IsHitTestVisible="False" Margin="2" />
                        </Canvas>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
