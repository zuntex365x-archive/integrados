    <Style TargetType="c1Legacy:C1Cube">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <c1Legacy:C1CubePanel />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c1Legacy:C1Cube">
                    <Grid>
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ItemsPresenter x:Name="ItemsHost" />
                        </Border>
                        <Grid x:Name="Drag" Background="Transparent" IsHitTestVisible="{TemplateBinding IsDraggable}" Cursor="Hand" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    

</ResourceDictionary>