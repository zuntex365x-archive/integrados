    <c1_mediaPlayer:InverseToOpacityConverter x:Key="InverseToOpacityConverter" />
    <c1_mediaPlayer_resources:C1_Silverlight_MediaPlayer x:Key="MediaPlayerResources" />

    <!-- ******************** MediaPlayer Brushes & Styles *****************-->
    
    <!-- Brush @ MediaPlayer Background-->
    <SolidColorBrush x:Key="MplayerBackgroundBrush" Color="#D8D1DCE8" />
    <SolidColorBrush x:Key="WpfMplayerBackgroundBrush" Color="#FFDCDCDC" />

    <!-- CornerRadius @ MediaPlayer -->
    <CornerRadius x:Key="MplayerCornerRadius">3</CornerRadius>
    <!-- CornerRadius @ MediaPlayer InnerBorder-->
    <CornerRadius x:Key="MplayerInnerBorderCornerRadius">2</CornerRadius>

    <!-- Brush @ MediaPlayer Video Screen -->
    <SolidColorBrush x:Key="MplayerVideoScreenBrush" Color="Black" />

    <!-- TextBlock @ MediaPlayer PlayList -->
    <Style x:Key="MplayerListTextBlock" TargetType="TextBlock" />
    <!-- TextBlock @ MediaPlayer PlayList Title -->
    <Style x:Key="MplayerListTitleBlock" TargetType="TextBlock" />

    <!-- Brush @ MediaPlayer UnPlay & Pause Template Buttons Background-->
    <LinearGradientBrush x:Key="MplayerStatesButtonBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#7FFFFFFF" Offset="0" />
        <GradientStop Color="#19FFFFFF" Offset="0.49" />
        <GradientStop Color="Transparent" Offset="0.51" />
        <GradientStop Color="#7FFFFFFF" Offset="1" />
    </LinearGradientBrush>
    <!-- Brush @ MediaPlayer UnPlay & Pause Template Buttons Background on MouseOver-->
    <LinearGradientBrush x:Key="MplayerStatesButtonOverBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#B2FFFFFF" Offset="0" />
        <GradientStop Color="#33FFFFFF" Offset="0.49" />
        <GradientStop Color="Transparent" Offset="0.51" />
        <GradientStop Color="#B2FFFFFF" Offset="1" />
    </LinearGradientBrush>

    <!-- Brush @ MediaPlayer Loading, UnPlay & Pause Template Icons-->
    <LinearGradientBrush x:Key="MplayerStatesIconBorderBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#E5FFFFFF" Offset="0.333" />
        <GradientStop Color="#B2FFFFFF" Offset="0.66" />
    </LinearGradientBrush>

    <!-- Color & Brush @ MediaPlayer Icon -->
    <Color x:Key="MplayerIconColor">#FF0094B3</Color>
    <SolidColorBrush x:Key="MplayerIconBrush" Color="{StaticResource MplayerIconColor}" />

    <!-- Thickness @ MediaPlayer Pannel Buttons -->
    <Thickness x:Key="MplayerButtonThickness">1</Thickness>
    <Thickness x:Key="MplayerVolumePanelBorderThickness">1</Thickness>

    <!-- CornerRadius @ MediaPlayer Panel Buttons -->
    <CornerRadius x:Key="MplayerButtonOuterCornerRadius">2</CornerRadius>
    <CornerRadius x:Key="MplayerButtonCornerRadius">1</CornerRadius>
    <CornerRadius x:Key="MplayerButtonInnerCornerRadius">0</CornerRadius>
    <CornerRadius x:Key="MplayerVolumePanelCornerRadius">1</CornerRadius>


    <!-- Brush @ MediaPlayer Icons Background -->
    <LinearGradientBrush x:Key="MplayerButtonIconBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FF0990AE" Offset="0.2" />
        <GradientStop Color="#FF72BED3" Offset="0.7" />
        <GradientStop Color="#FF0990AE" Offset="1" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="WpfMplayerButtonIconBrush" Color="#FF444444" />

    <!-- Brush @ MediaPlayer Volume Control Background -->
    <SolidColorBrush x:Key="MplayerVolumeControlBrush" Color="#FFFAFBFC" />

    <!-- Brush @ MplayerTimelineSliderTemplate Background -->
    <LinearGradientBrush x:Key="MplayerTimelineBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        
        
        <GradientStop Color="#FFA0A0A0" Offset="0.3" />
    </LinearGradientBrush>
    <!-- Brush @ MplayerTimelineSliderTemplate Border -->
    
    
    <SolidColorBrush x:Key="MplayerTimelineBorderBrush" Color="Gray" />
