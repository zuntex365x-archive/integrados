                                <ContentControl Content="{x:Null}" ContentTemplate="{Binding ScreenExtension}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
                                <ContentControl Template="{StaticResource ListsTemplate}" Background="{Binding Background}" Foreground="{Binding Foreground}" />
                            </Grid>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
