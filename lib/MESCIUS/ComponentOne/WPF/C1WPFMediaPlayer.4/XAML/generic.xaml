    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/C1.WPF.4;component/themes/Common.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <c1_mediaPlayer:TimeSpanConverter x:Key="TimeSpanConverter" />
    <c1_mediaPlayer:FallbackConverter x:Key="FallbackConverter" />
    <c1_mediaPlayer:HoursMinutesSecondsConverter x:Key="HoursMinutesSecondsConverter" />
